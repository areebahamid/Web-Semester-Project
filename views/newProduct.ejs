<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <% if(success.length> 0){ %>
        <div id="success-alert" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 opacity-100 transition duration-500 ease-in-out ">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <%}%>
        <% if(error.length > 0){ %>
            <div id="error-alert" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
                <span class="inline-block mt-1 mb-1 text-white">
                    <%= error %>
                </span>
            </div>
            <%}%>

    <!-- Navbar -->
    <div class="w-full h-screen p-5">
        <!-- Flex container to align both Shop and links horizontally -->
        <div class="flex items-center justify-between">
            <a href="#" class="text-4xl font-bold text-gray-900">Shop</a>
            <div class="space-x-4 mr-4">
                <a href="#" class="text-gray-700 hover:text-gray-900">Home</a>
                <a href="/shop" class="text-gray-700 hover:text-gray-900">Products</a>
                <a href="/cart" class="text-gray-700 hover:text-gray-900">Cart</a>
                <a href="#" class="text-gray-700 hover:text-gray-900">My Account</a>
            </div>
            <a href="/owners/logout" class="bg-red-600 items-center shadow-md rounded-lg w-16 h-10 p-2">logout</a>
        </div>

        <div class="mt-5 h-1 bg-slate-800 w-full"></div>

        <div class="flex flex-row   mt-2 w-full min-h-screen bg-slate-300">
            <div class="flex-[20%] flex flex-col  border-slate-400 border-2 p-4">
                <a class="mb-4 text-slate-950" href="/owners/shop">All products</a>
                <a class="text-white" href="#">Create new products</a>
            </div>
            <br>
            <div class="flex-[80%] flex flex-col space-x-3 flex-wrap p-2">
                <h2 class="text-2xl font-bold text-slate-500 ">Create new Product</h2>
                <form class="mt-4 flex flex-col space-y-3" action="/products/create" method="post" enctype="multipart/form-data">

                    <label class="text-xl font-bold text-slate-500 " for="">Product Details</label>
                    <input type="file" name="image" />
                    <div class="flex flex-row space-x-4 ">
                        <input class="w-1/2 h-10 rounded-lg p-2" type="text" name="name" placeholder="Product Name" />
                        <input class="w-1/2 h-10 rounded-lg p-2" type="text" name="price" placeholder="Product price" />
                    </div>
                    <input class="w-1/2 h-10 rounded-lg p-2" type="number" name="discount" placeholder="Discount price" />
                    <label class="text-xl font-bold text-slate-500 " for="">Panel Details</label>
                    <div class="flex flex-row space-x-4 ">
                        <input class="w-1/2 h-10 rounded-lg p-2" type="text" name="bgcolor" placeholder="background Color" />
                        <input class="w-1/2 h-10 rounded-lg p-2" type="text" name="panelcolor" placeholder="Panel Color" />
                    </div>
                    <input class="w-1/2 h-10 rounded-lg p-2" type="text" name="textcolor" placeholder="Text Color" />
                    <input class="w-1/2 h-10 bg-blue-600 rounded-lg p-2 cursor-pointer" type="submit" name="Creete Product" value="Create Product">
                </form>
            </div>
        </div>
    </div>
</body>

<script>
    // Set timeout to hide the alerts after 2 seconds
    setTimeout(() => {
        const successAlert = document.getElementById('success-alert');
        const errorAlert = document.getElementById('error-alert');

        if (successAlert) {
            successAlert.classList.add('opacity-0'); // fade out
            setTimeout(() => successAlert.style.display = 'none', 500); // hide after transition
        }
        if (errorAlert) {
            errorAlert.classList.add('opacity-0'); // fade out
            setTimeout(() => errorAlert.style.display = 'none', 500); // hide after transition
        }
    }, 2000); // Display duration (2 seconds)
</script>

</html>