<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <% if(success.length> 0){ %>
        <div id="success-alert"
        class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <%}%>
    <!-- Navbar -->
    <div class="w-full h-screen p-5">
        <!-- Flex container to align both Shop and links horizontally -->
        <div class="flex items-center justify-between">
            <a href="#" class="text-4xl font-bold text-gray-900">Shop</a>
            <div class="space-x-4 mr-4">
                <a href="#" class="text-gray-700 hover:text-gray-900">Home</a>
                <a href="#" class="text-gray-700 hover:text-gray-900">Products</a>
                <a href="/cart" class="text-gray-700 hover:text-gray-900">Cart</a>
                <a href="#" class="text-gray-700 hover:text-gray-900">My Account</a>
                <a href="/orderslist" class="text-gray-700 hover:text-gray-900">My orders</a>
            </div>
            <a href="/logout" class="bg-red-600 items-center rounded-lg w-16 h-10 p-2">logout</a>
        </div>

        <div class="mt-5 h-1 bg-slate-800 w-full"></div>

        <div class="flex flex-row   mt-2 w-full min-h-screen bg-slate-300">
            <div class="flex-[20%] flex flex-col  p-4">

                <a class="mb-4 text-white" href="#">All products</a>
                <!-- <a class="text-gray-950 " href="/newProduct">Create new products</a> -->
            </div>
            <br>
            <div class="flex-[80%] flex flex-row space-x-3 flex-wrap gap-2 p-2" >
                <% products.forEach((product)=>{ %>
                    <div class=" w-60 h-72 rounded-md overflow-hidden transition-transform duration-300 ease-in-out  hover:scale-105 ">
                        <img class="w-full h-52 object-center object-cover "
                            src="data:image/jepg;base64,<%=product.image.toString('base64') %>"
                            alt="<%= product.name %>" />

                            <div
                            class="bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] w-full h-20 p-2 text-xl font-semibold tracking-tighter flex flex-col justify-start items-start">
                            <div class="">
                            <div class="text-2xl tracking-tighter flex flex-row items-center justify-between ">
                              <ul class="mr-2"><%= product.name %></ul>
                              <a class="cursor-pointer transition-transform hover:scale-110 shadow-xl" href="/addToCart/<%=product.id%>">
                              <img class="h-8 w-8 rounded-md" src="https://cdn-icons-png.flaticon.com/512/5163/5163709.png" alt="Add to Cart">
                              </a>
                            </div>
                            </div>
                            <div class="flex items-center space-x-2">
                              <!-- Price -->
                              <h3 class="text-2xl">$<%= product.price %></h3>
                              
                              <!-- Discount -->
                              <% if (product.discount > 0) { %>
                                <h3 class="text-red-500 text-xl line-through">$<%= (product.price - product.discount).toFixed(2) %></h3>
                                <h3 class=" text-xl">$<%= product.discount %> off</h3>
                              <% } %>
                            </div>
                          </div>
                          
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
</body>

<script>
    // Set timeout to hide the alerts after 2 seconds
    setTimeout(() => {
        const successAlert = document.getElementById("success-alert");
        // const errorAlert = document.getElementById('error-alert');

        if (successAlert) {
            successAlert.classList.add("opacity-0"); // fade out
            setTimeout(() => (successAlert.style.display = "none"), 500); // hide after transition
        }
        // if (errorAlert) {
        //     errorAlert.classList.add('opacity-0'); // fade out
        //     setTimeout(() => errorAlert.style.display = 'none', 500); // hide after transition
        // }
    }, 1000); // Display duration (2 seconds)
</script>

</html>